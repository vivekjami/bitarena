{
  "name": "@bitarena/backend",
  "version": "1.0.0",
  "main": "src/index.ts",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc && npm run copy-files",
    "copy-files": "echo Build complete",
    "start": "node dist/index.js",
    "start:migrate": "npm run migrate:prod && npm start",
    "test": "jest",
    "test:contracts": "ts-node scripts/test-contracts.ts",
    "migrate": "ts-node scripts/migrate.ts",
    "migrate:prod": "node dist/scripts/migrate.js || node -r ts-node/register scripts/migrate.ts",
    "seed": "ts-node scripts/seed.ts",
    "seed:prod": "node dist/scripts/seed.js || node -r ts-node/register scripts/seed.ts",
    "db:setup": "npm run migrate && npm run seed",
    "faucet": "ts-node scripts/faucet.ts",
    "postinstall": "npm run build"
  },
  "dependencies": {
    "axios": "^1.13.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "ethers": "^6.10.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "socket.io": "^4.6.1",
    "ts-node": "^10.9.2"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.5",
    "@types/pg": "^8.10.9",
    "jest": "^29.7.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
